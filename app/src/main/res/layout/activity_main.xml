<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2ff"
    android:orientation="vertical"
    tools:context="com.lly.tabkulayout.MainActivity">

    <com.lly.mylibrary.TabKuLayout
        android:id="@+id/tk_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorHeight="4dp"
        app:tabIndicator_end_color="#0000FF"
        app:tabIndicator_start_color="#9ACD32"
        app:tabSelectedTextColor="#9B30FF"
        app:tab_Mode="scrollable"
        app:tab_font_size="14sp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
